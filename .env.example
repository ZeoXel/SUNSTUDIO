# OpenAI API Configuration (for Veo, Nano-banana)
OPENAI_API_KEY=sk-xxx
OPENAI_BASE_URL=https://api.lsaigc.com

# Volcengine API Configuration (for Seedance, Seedream)
# Get API Key from: https://console.volcengine.com/ark/region:ark+cn-beijing/apiKey
VOLCENGINE_API_KEY=xxx
# Alternative name
ARK_API_KEY=xxx

# Gemini API Configuration
GEMINI_API_KEY=xxx
# Or use generic API_KEY
API_KEY=xxx

# Public keys (accessible in browser)
NEXT_PUBLIC_GEMINI_API_KEY=xxx
NEXT_PUBLIC_OPENAI_API_KEY=xxx
NEXT_PUBLIC_OPENAI_BASE_URL=https://api.lsaigc.com

# Use server-side gateway proxy for browser requests (recommended)
NEXT_PUBLIC_USE_GATEWAY_PROXY=true
NEXT_PUBLIC_GATEWAY_PROXY_BASE=/api/gateway
# Assigned key cache TTL (ms)
NEXT_PUBLIC_ASSIGNED_KEY_TTL_MS=86400000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Tencent SMS Configuration
ENABLE_SMS=false
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_SMS_SDK_APP_ID=your_sms_sdk_app_id
TENCENT_SMS_TEMPLATE_ID=your_sms_template_id
TENCENT_SMS_SIGN_NAME=your_sms_sign_name

# Verification Code Settings
ALLOW_MASTER_CODE=false
NEXT_PUBLIC_ENABLE_MASTER_CODE=false
